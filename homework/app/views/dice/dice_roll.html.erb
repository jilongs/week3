<h1>Dice Game</h1>
<hr>
<p></p>
<%= image_tag("dice/#{@dice1}.png")%>
<%= image_tag("dice/#{@dice2}.png")%>
<% if @is_win%>
	<h1>YOU WIN!</h1>
	<%= link_to "Start Over", dice_url%>
<% elsif @is_lose %>
	<h1>YOU LOSE.</h1>
	<%= link_to "Play Again", dice_url%>
<% else%>
<h2>Your point is now <%= @last%>.</h2>
<p>Now try to get <%= @last%> again before you roll a 7.</p>
<%= form_tag(dice_url) do %>
	<%= hidden_field_tag "point", @last%>
  <p><%= submit_tag("Roll again!") %></p>
<% end %>
<% end %>